<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="project_associate_sale_order_view_form" model="ir.ui.view">
        <field name="name">project.associate.sale.order.wizard.form</field>
        <field name="model">project.associate.sale.order</field>
        <field name="arch" type="xml">
            <form string="Associate a Sales Order">
                <group>
                    <p>This will automatically confirms the sales order.</p>
                </group>
                <group>
                    <group>
                        <field name="project_id" readonly="1"/>
                        <field name="partner_id"/>
                    </group>
                    <group>
                        <field name="billable_type" widget="radio" attrs="{'invisible': [('is_enable_billable', '=', False)]}"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="sale_id"/>
                    </group>
                    <group>
                        <field name="is_confirm_sale"/>
                        <field name="is_enable_billable"/>
                    </group>
                </group>
                <group attrs="{'invisible': ['|', ('is_enable_billable', '=', False), ('billable_type', '=', 'employee_rate')]}">
                    <group>
                        <field name="product_id" options="{'no_associate_edit': True, 'no_associate': True}"
                               attrs="{'required': [('billable_type', '=', 'project_rate'), ('is_enable_billable', '=', True)]}"/>
                    </group>
                    <group>
                        <field name="price_unit" widget='monetary'
                               options="{'currency_field': 'currency_id', 'field_digits': True}"
                               attrs="{'required': [('billable_type', '=', 'project_rate'), ('is_enable_billable', '=', True)]}"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </group>
                <group attrs="{'invisible': ['|', ('is_enable_billable', '=', False), ('billable_type', '=', 'project_rate')]}">
                    <field name="line_ids" nolabel="1" attrs="{'required': [('billable_type', '=', 'employee_rate'), ('is_enable_billable', '=', True)]}">
                        <tree editable="bottom">
                            <field name="employee_id" options="{'no_associate_edit': True, 'no_associate': True}"/>
                            <field name="product_id" options="{'no_associate_edit': True, 'no_associate': True}"/>
                            <field name="price_unit" widget='monetary'
                                   options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                            <field name="currency_id" invisible="1"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button string="Associate Sales Order" type="object" name="action_associate_sale_order"
                            class="oe_highlight"/>
                    <button string="Cancel" special="cancel" type="object" class="btn btn-secondary oe_inline"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="project_project_action_multi_associate_sale_order" model="ir.actions.act_window">
        <field name="name">Associate a Sales Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.associate.sale.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="project_associate_sale_order_view_form"/>
        <field name="target">new</field>
        <field name="multi" eval="False"/>
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]"/>
    </record>

</odoo>
