<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="sale_show_task_id">
        <field name="name">sale.order.show.task_id.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="is_enable_show_task_id" groups="base.group_user"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_order_form">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/form//field[@name='price_unit']" position="after">
                <field name="order_id" invisible="1"/>
                <field name="project_id" invisible="1"/>
                <field name="task_id" groups="base.group_user" domain="[('project_id', '=', project_id)]"
                />
                <!--                       attrs="{'invisible': [('order_id.is_enable_show_task_id','=',False)]}"-->
            </xpath>

            <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom_qty']" position="before">
                <field name="order_id" invisible="1"/>
                <field name="task_id" groups="base.group_user"
                />
                <!--                       attrs="{'invisible': [('order_id.is_enable_show_task_id','=',False)]}"-->
            </xpath>

        </field>
    </record>

</odoo>
